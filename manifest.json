{
  "manifest_version": 3,
  "name": "Spotify Web Lyrics Plus",
  "version": "1.0.0",
  "description": "Multi-provider lyrics extension for Spotify Web Player with auto-detection",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://open.spotify.com/*",
    "https://lrclib.net/*",
    "https://spclient.wg.spotify.com/*",
    "https://genius.com/*",
    "https://apic-desktop.musixmatch.com/*",
    "https://kr.imelon.co/*",
    "https://translate.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page.js", "token-setup.html", "lyrics-popup.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Spotify Web Lyrics Plus"
  },
  "commands": {
    "toggle-lyrics": {
      "suggested_key": {
        "default": "Ctrl+L",
        "mac": "Cmd+L"
      },
      "description": "Toggle lyrics popup"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}